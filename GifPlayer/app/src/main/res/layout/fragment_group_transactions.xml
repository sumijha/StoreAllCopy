<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="com.viceboy.babble.ui.state.DataLoad" />

        <import type="android.view.View" />

        <variable
            name="dataLoadState"
            type="DataLoad" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screens.groupDetails.GroupTransactionsFragment">

        <include
            android:id="@+id/rvTransactions"
            layout="@layout/layout_group_tab_details_recycler_list"
            android:visibility="@{dataLoadState == DataLoad.SUCCESS?View.VISIBLE:View.GONE}" />

        <include
            android:id="@+id/no_transaction_placeholder"
            layout="@layout/layout_no_transactions"
            android:visibility="@{dataLoadState == DataLoad.ERROR?View.VISIBLE:View.GONE}" />

        <include
            android:id="@+id/no_transaction_progress"
            layout="@layout/layout_progress_data_load"
            android:visibility="@{dataLoadState == DataLoad.IN_PROGRESS?View.VISIBLE:View.GONE}" />
    </FrameLayout>
</layout>